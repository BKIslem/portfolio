              </ul>
            </div>
          </div> 
        </div>
    </div>
    <div class="skills container">
      <div class="section-title">
        <h3>Hard Skills</h3>
      </div>
      <div class="row skills-content">
    {% for hard in hards %}
        <div class="col-lg-6">

          <div class="progress">
            <span class="skill">{{hard.Name}} <i class="val">{{hard.Percentage}} %</i></span>
            <div class="progress-bar-wrap">
              <div class="progress-bar" role="progressbar" aria-valuenow="{{hard.Percentage}}" aria-valuemin="0" aria-valuemax="100">
              </div>
            </div>
          </div>
        </div>
    {% endfor %}
      </div>
      <div class="section-title">
        <h3>Soft Skills</h3>
      </div>
      <div class="row">
      {% for soft in softs %}
            <div class="col-lg-6">
              <ul>
                <li><i class="right bi bi-chevron-right"></i> <strong>{{soft.Name}}</strong></li>
              </ul>
            </div>
        {% endfor %}
          </div>
    </div>
</section>
    <!-- End About Me -->
    <!-- satart resume -->
<section id="resume" class="resume">
    <div class="container">
      <div class="section-title">
        {# <h2>Resume</h2> #}
        <p>Check My Resume</p>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <h3 class="resume-title">Education</h3>
          {% for education in educations %}
          <div class="resume-item">
            <h4>{{education.Diploma}}</h4>
            <h5 class='text-center'>{{education.Year}}</h5>
            <p><em>{{education.Establishment}}</em></p> 
          </div>
          {% endfor %}
        </div>
        <div class="col-lg-6">
          <h3 class="resume-title">Professional Experience</h3>
          {% for experience in experiences %}
          <div class="resume-item">
          {% if experience.id == 1 %}
            <h4>{{experience.Occupation}}</h4>
            <h5 class='text-center'>{{experience.DateStart}}</h5>
            <p><em>{{experience.WorkPlace}} </em></p>
          {% endif %}
          {% endfor %}
            <p>
            <ul>
            {% for tache in taches %}
             {% if tache.experience is not null and tache.experience.id == 1 %}
              <li>{{tache.name}} </li>
            {% endif %}
            {% endfor %}
            </ul>
            </p>
          </div>
          {% for experience in experiences %}
          <div class="resume-item">
          {% if experience.id == 2 %}
            <h4>{{experience.Occupation}}</h4>
            <h5 class='text-center'>{{experience.DateStart}}</h5>
            <p><em>{{experience.WorkPlace}} </em></p>
            {% endif %}
            {% endfor %}
            <p>
            <ul>
            {% for tache in taches %}
             {% if tache.experience is not null and tache.experience.id == 2 %}
              <li>{{tache.name}}</li>
               {% endif %}
               {% endfor %}
            </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End Resume  -->
  <!-- start project -->
  <section id="projects" class="projects">
    <div class="container">
      <div class="section-title">
        {# <h2>Projects</h2> #}
        <p>CHECK My Projects</p>
      </div>
      <div class="row">
        {% for projectimages in myphotos %}
        <div class="col-lg-6">
        <img src = {{("/images/projects/" ~ projectimages.name)}} width='70%' height="90%"  alt='projects'>
        </div>
        {% endfor %}
        {% for projects in myprojects %}
        <div class="col-lg-6">
        <br>
        <h2> {{projects.name}} </h2>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
